<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_anhDoAnYeuThich"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:background="#99141414"
            android:layout_marginTop="173dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:id="@+id/txt_tenDoAnYeuThich"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_favorite_black_24dp"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:textColor="@color/white"
                android:textSize="18dp"
                android:id="@+id/txt_luotThich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

        </LinearLayout>



        <TextView
            android:textStyle="bold"
            android:textColor="#F32C2C"
            android:background="#66F8F8F8"
            android:id="@+id/txt_giaDoAnYeuThich"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="17dp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>